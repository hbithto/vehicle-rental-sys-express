{
  "name": "vrs-backend",
  "version": "1.0.0",
  "description": "vehicle rental system backend server",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently -k -n server,typecheck -c blue,green \"npm:dev:server\" \"npm:dev:typecheck\"",
    "dev:server": "tsx watch -r tsconfig-paths/register src/server.ts",
    "dev:typecheck": "tsc --noEmit --watch",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js"
  },
  "keywords": [
    "vehicle rental system",
    "backend",
    "server",
    "api",
    "nodejs",
    "express",
    "restful api"
  ],
  "author": "Hasan Bithto",
  "license": "ISC",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "8.2.0",
    "bcryptjs": "3.0.3",
    "cors": "2.8.5",
    "dotenv": "17.2.3",
    "express": "5.2.1",
    "helmet": "8.1.0",
    "http-status": "2.1.0",
    "jsonwebtoken": "9.0.3",
    "morgan": "1.10.1",
    "node-cron": "4.2.1",
    "pg": "8.16.3",
    "swagger-ui-express": "5.0.1",
    "winston": "3.19.0",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.6",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.6",
    "@types/jsonwebtoken": "9.0.10",
    "@types/morgan": "1.9.10",
    "@types/node": "25.0.3",
    "@types/node-cron": "3.0.11",
    "@types/pg": "8.16.0",
    "@types/swagger-ui-express": "4.1.8",
    "@typescript-eslint/eslint-plugin": "8.50.0",
    "concurrently": "9.2.1",
    "eslint": "9.39.2",
    "tsc-alias": "1.8.16",
    "tsconfig-paths": "4.2.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  }
}
